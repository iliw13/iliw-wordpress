web1:
  name: wordpress
  php_extensions:
    - memcache
    - mysql
    - curl
    - zip
  shared_writable_dirs:
    - wp-content/
    - setup/
  before_deploy:
    - "cp -rf content/* `pwd`/wp-content/"
    - "if [ ! -e setup/.htaccess ]; then cp htaccess setup/.htaccess; fi"
db1:
  name: iliw-wordpress
  type: mysql

cache1:
  name: iliw-wordpress-cache
  type: memcached
